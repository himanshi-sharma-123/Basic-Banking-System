<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- * Bootstap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We"
      crossorigin="anonymous"
    />

    <!-- * FontAwsome CDN -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
      integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <!-- * Custom CSS LINK  -->
    <link rel="stylesheet" href="./CSS/styles.css" />

    <!-- * Custom CSS LINK  -->
    <link rel="stylesheet" href="./CSS/ejsStyle.css" />

    <title><%- title %></title>
    <style>
      @media screen and (max-width: 1024px) {
        .cus_foot {
          display: none;
        }
      }
    </style>
  </head>

  <body>
    <!-- - Including navbar file from components folder -->
    <%- include('./components/navbar') -%>

    <!-- - Back to all users -->

    <div class="container mt-2">
      <a href="/" class="btn btn-secondary fw-bold">&larr; Back</a>
    </div>

    <!-- - add details -->

    <div class="container mt-3 custom_details_container w-50">
      <!-- - Alert msg -->
      <% if(msg !="" ){%>
      <div class="alert alert-success text-center" role="alert" id="addMsg">
        <%=msg %>
      </div>

      <%} %>
      <div class="container mt-3">
        <h3 class="text-light bg-dark fw-bold p-2 text-center">Add User</h3>

        <!-- - ADD User Form -->
        <form action="/add" method="POST">
          <div class="form-group mt-3">
            <label for="exampleInputEmail1">Name</label>
            <input
              type="text"
              class="form-control"
              aria-describedby="emailHelp"
              placeholder="Enter Name"
              name="userName"
              required
            />
          </div>

          <div class="form-group mt-3">
            <label for="exampleInputPassword1">Email Address</label>
            <input
              type="email"
              class="form-control"
              placeholder="Enter Email"
              name="userEmail"
              required
            />
          </div>

          <div class="form-group mt-3">
            <label for="exampleInputPassword1">Mobile</label>
            <input
              type="number"
              class="form-control"
              placeholder="Enter Mobile No."
              name="mob"
              required
            />
          </div>

          <div class="form-group mt-3">
            <label for="exampleInputPassword1">Amount</label>
            <input
              type="number"
              class="form-control"
              placeholder="Enter Amount"
              name="userAmount"
              required
            />
          </div>

          <button type="submit" class="btn btn-dark mt-3">Submit</button>
        </form>
      </div>
    </div>

    <!-- - Including footer file from component folder which contain (body closing tag) -->
    <%- include('./components/footer') -%>
  </body>
</html>
